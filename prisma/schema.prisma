generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  s_id         String       @id @default(uuid())
  first_name   String
  last_name    String
  department   Department
  email        String       @unique
  password     String
  joining_date DateTime
  role         Role         @default(STUDENT)
  createdAt    DateTime     @default(now())
  attendance   Attendance[]
}

model Attendance {
  id        Int      @id @default(autoincrement())
  studentId String
  date      DateTime
  status    Status
  createdAt DateTime @default(now())
  student   User     @relation(fields: [studentId], references: [s_id])

  @@unique([studentId, date], name: "student_date_unique")
}

enum Role {
  ADMIN
  STUDENT
}

enum Status {
  PRESENT
  ABSENT
}

enum Department {
  BTECH
  BPHARM
  MBA
  MCA
  MTECH
  PHD
  DIPLOMA
  BCA
  BSC
  MSC
  BCOM
  MCOM
  BA
  MA
  BBA
}
